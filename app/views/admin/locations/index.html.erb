<h1>Locations</h1>

<table class="table">
  <tr>
    <th class="col-xs-4" colspan="2">Name</th>
    <th class="col-xs-8">Images</th>
  </tr>
  <% @locations.each do |location| %>
    <tr>
      <td><%= location.name %></td>
      <td>
        <%= link_to 'Edit', edit_location_path(location), :class => 'btn btn-default' %>
        <%= link_to 'Delete', location_path(location), :data => {:confirm => 'Are you sure?'}, :method => :delete, :class => 'btn btn-danger' %>
      </td>
      <td>
      <%= image_tag "https://maps.googleapis.com/maps/api/staticmap?markers=#{location.latitude},#{location.longitude}&size=160x120&sensor=false" %>
      <% location.images.each do |image| %>
        <%= image_tag image.photo, :class => 'location-image' %>
      <% end %>
      </td>
    </tr>
  <% end %>
</table>

<%= link_to 'New location', new_location_path, :class => 'btn btn-primary' %>